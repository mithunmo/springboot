/* Vars */
@ffgBlue: #00AEEF;
@borderColor: #AAA;

/* Global setup */
body { font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif; font-size:12px !important; margin:0px;}
h1 {
	margin:0;
}
h2 {
	margin:0 0 1em;
}

/* Mixin */
.rounded-corners (@radius:5px)
{
	-webkit-border-radius: @radius;
	-moz-border-radius: @radius;
	border-radius: @radius;
}

/* Media queries for print */
@media print { 
	/* All your print styles go here */
	.wrap { width:970px; padding:0px 10px;}
}

/* Project label */
.proj-label 
{ 
	.rounded-corners; display:block;
	padding:5px 8px; font-size:14px;
	/* Season */
	&.s { color:#000; min-width:140px; width:120px; margin:0px auto; font-weight:bold;}
	&.s-winter { background-color:#829DB0;}
	&.s-spring { background-color:#C4DF9C;}
	&.s-fall { background-color:#FED699;}
	&.s-summer { background-color:#ED008E;}
	&.s-other { background-color:#949599;}
	/* Type */
	&.t { color:#FFF; min-width:140px; width:150px; margin:0px auto;}
	&.tb { background-color:#1CA9E1;}
	&.tg { background-color:#3AB54A;}
	&.tr { background-color:#ED008E;}
	&.tt { font-weight:bold; text-align:left;}
}

.wrapper
{
	&.b
	{
		background-color:@ffgBlue;
	}
}
.wrap {
	width:1000px;
  	margin:0 auto;
  	position:relative;
}
.header {
	padding:5px 0px;
	background: @ffgBlue;
}
.date {
	height:30px;
	width:1000px;
	background:red;
	clear:both;
}
.main-wrapper 
{
	clear:both; overflow:hidden;
	.main {
		margin-top:10px;
		float:left;
		width:750px;
	}
}
.mainbox {
	/*border-style:solid;
	border-width:1px;*/
  	margin-top:15px;
  	position: relative;
  	border:thin solid @borderColor;
  	/*text-align:center;*/
  	.mainbox-content { min-height:80px;}
  	p { padding-left:5px; }
}

/* LESS support nested structure */
.sidebar 
{
	margin-top:10px;
	float:right;
	width:230px;
	.sidebar-heading {
	  	margin-top:5px;
	  	font-weight: bold;
	}
	.sidebar-box {
		border-style:solid;
		border-width:2px;
		border-color: @ffgBlue;
		.rounded-corners(10px);
		margin-top:15px;
		text-align:center;
		padding-bottom:10px;
		padding-top:10px;
	}
	.sidebar-button {
	  	border-style:solid;
	  	border-width:1px;
	  	.rounded-corners(5px);
	  	background-color:#cd00cd;
	  	margin-bottom:15px;
	}
}

.footer {
	margin-top:20px;
  	clear:both;
  	padding:5px 10px;
	background:brown;
	p {
		margin:0;
	}
}
* html .footer {
  	height:1px;
}
.panel {
  	height:25px;
  	background-color:#ddd;
  	font-weight: bold;
  	font-size:16px;
  	padding-left:5px;
  	padding-top:5px;
}
.panel-content {
  	height:25px;
  	font-size:14px;
  	padding-top:5px;
  	padding-left:5px;
}
.title-content {
  	height:60px;
  	background-color:white;
  	/*border-width:1px;
  	border-style:solid;*/
  	text-align:center;
  	border:thin solid @borderColor;
}
.introduction {
  	height:25px;
  	/*width:700px;*/
  	vertical-align:bottom;
  	/*display:table-cell;*/
  	background-color:#ddd;
  	font-weight: bold;  
}
/* My Version */
.tile {
	position:absolute;
	top:15px;
	right:50px;
  	text-align:center;
  	width:50px;
  	font-size:20px;
  	font-weight:bold;
  	/*height:50px;*/
  	padding:10px;
  	background-color:black;
  	.rounded-corners;
}

.endsubmitbutton {
  	height:40px;
  	border-style:solid;
  	border-width:1px;
  	.rounded-corners(5px);
  	background-color: @ffgBlue;
  	margin-top:15px;
}
.space {
  	height:15px;
}
.brief {
  	height:30px;
  	font-size : 18px;
  	color: @ffgBlue;
}
.white {
  	color:white;
}
.column-left {
  	float:left;
  	width:33%;
