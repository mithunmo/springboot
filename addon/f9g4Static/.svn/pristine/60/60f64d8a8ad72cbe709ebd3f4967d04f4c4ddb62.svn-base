@charset "utf-8";
/* CSS Document */

.popup .button
{
	display:inline;
}

.popup .header .close
{
	display:inline-block;
	float:right;
	/*padding-right:10px;*/
	font-size:1.563em;
	cursor:pointer;
	position:absolute;
	right:15px;
	top:5px;
}

/*Terms panel=======================================================*/
#terms_ok{ width:40px; margin-left:auto; margin-right:auto; display:block; margin-bottom:10px; margin-top:0px; position:relative; bottom:10px;}
.termsContent .leftArea { width:500px; display:inline;}
.termsContent .rightArea { width:150px; height:100%; display:inline; position:absolute; margin-left:5px;}
.popup .confirmation
{
	width:670px;
}
/*===Ends of terms panel================================================*/

/*forget panel============================================================*/
#forget_password { width:550px; height:280px;}
#forgotPwd { position:absolute; left:20px; width:510px;}

/*Ends of forget panel===========================================================================*/

/*Error popup======================================================================================*/
#error{ padding-top:15px;padding-left:20px;padding-right:20px;padding-bottom:30px;color:#F00; /* font-size:12px; */}
.popup .error_close
{
    display:inline-block;
	float:right;
	/*padding-right:10px;*/
	font-size:1.563em;
	cursor:pointer;
	position:absolute;
	right:25px;
	top:20px;
}
/*End of Error popup===============================================================================*/

/*Membership popup=================================================================================*/
#membership{ width:500px; margin-left: 195px; margin-top: 80px; /* border:thin solid #bdcbd4; */}
#memTitle{/* font-size:14px; */}
#form_membership_payment input {position:relative; top:0px;}
#paynowMask{ position:relative; top:0px; z-index: -1; width: 100%; height: 50px; background-color:#e6e7e8; opacity:0;  /* IE 8 */ -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)"; /* IE 5-7 */ filter: alpha(opacity=0);}
/*end of membership popup==============================================================================*/

/*Added to cart========================================================================================*/
#popup_added_to_cart .cart .item.odd { background-color: #E6E7E8;}
#popup_added_to_cart .cart .item.even { background-color: #BCBEC0;}
#popup_added_to_cart .subtotal .price{ display:inline; }
/*End of added to cart=================================================================================*/

/*Board detail=========================================================================================*/
#popup_board_detail .leftArea{ width:50%; height:100%; border-right:10px solid #FFF; float:left; position:relative; z-index:13;}
#popup_board_detail .leftArea .enlargeOption{ position:absolute; right:0px; font-size: 16px; margin-right:30px; width:80px;}
#popup_board_detail .leftArea .leftArea-hint{ font-size:16px; color:#C30;}
#popup_board_detail .rightArea{ width:48%; height:98%; z-index:12; position: relative;}
#popup_board_detail .rightArea .info{ padding-top:10px; margin-left:10px; padding-bottom:5px; border-bottom:thin solid #bdcbd4; /* font-size:14px; */ /* font-weight:bold; */}
#popup_board_detail .rightArea .info .info-board-name { font-size:19px; font-weight:bold; text-transform: uppercase;}
#popup_board_detail .rightArea .info .info-board-name { font-size:19px;}
#popup_board_detail .rightArea .info .info-board-name { font-size:19px;}
#popup_board_detail .rightArea .detail table{ width:100%; margin-top:5px; /* font-size:12px; */}
#popup_board_detail .rightArea .comment .icon{ float:left; margin-top:10px; margin-left:10px; display:inline-block; width:40px; height:40px; /*border:thin solid #000;*/ font-size:0px; text-align:center}
#popup_board_detail .rightArea .comment .icon i{ height:100%; display:inline;}
#popup_board_detail .rightArea .comment .input{ display:inline; margin-left:10px; margin-top:10px; width:260px; /* font-weight:bold; */}
#popup_board_detail .rightArea .comment textarea{ width:100%; margin-left:0px;}
#popup_board_detail .rightArea .suggestion .item{ display:inline; width:100px; height:100px; margin-right:5px;}
/*---scroll bar for skills info block------*/
#board_detail_scrollbar .viewport { width: 100%; height: 100%; overflow: hidden; position: relative;}
#board_detail_scrollbar .scrollbar { position: absolute;  z-index:1; width: 7px; right:0px;}
#board_detail_scrollbar .track { background-color:#FFF; height: 100%; width:7px; position: relative; padding: 0px; cursor: pointer;}
/*End of board detail==================================================================================*/

/*Referral manage======================================================================================*/
#popup_referral_manage .td1 {width:10%;}
#popup_referral_manage .td2 {width:10%;}
#popup_referral_manage .td3 {width:15%;}
#popup_referral_manage .td4 {width:25%;}
#popup_referral_manage .td5 {width:10%;}
#popup_referral_manage .td6 {width:15%;}
#popup_referral_manage .td7 {width:15%;}
#popup_referral_manage .odd{ background-color:#E6E7E8;}
#popup_referral_manage .even{ background-color:#bdcbd4;}
/*End of referral manage===============================================================================*/

/*user info======================================================================================*/
#profile_userName { /* font-size: 16px; */ font-weight: bold; text-transform: uppercase;}
#profile_userCountry { /* font-size: 12px; */}
#userInfoLogo { width:210px; height:210px; display:inline; vertical-align: top;}
#userInfoDetail { max-width: 600px; min-width:300px; display: inline; vertical-align: top;}
/*Rating panel*/
#popup_userinfo .readonly{ width:45%; display: inline;}
#popup_userinfo .partial{ width:50%; display: inline;}
#popup_userinfo .overall{ width:50%; display: inline;}
#popup_userinfo .value{ width:9%; display:inline;}

/*For designer info-------------------------------*/
#popup_designer_info_skills{ display:inline; width:280px; vertical-align: top; height: 305px; margin-left:10px;}
#popup_designer_info_about_you{ display:inline; width:250px; vertical-align: top; height: 305px; margin-left:10px;}
#popup_designer_info_languages{ width:184px; margin-top:16px; height:123px;}
#popup_designer_info_rating{ display:inline; width:280px; top:0px; vertical-align: top; height:188px; margin-left:10px;}
#popup_dsigner_info_profile{ display:inline; width:250px; top:0px; vertical-align: top; height:188px; margin-left:10px;}
#popup_designer_info_logo{ display:inline; width:200px; top:0px; vertical-align: top; margin-top:3px; margin-left:10px;}
/*end of userinfo======================================================================================*/

/*close popup button----------------------------------*/
.popup .close
{
	display:inline;
}

